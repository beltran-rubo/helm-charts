{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/kibana"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/kibana"
        },
        "runtime_parameters": "",
        "target_platform": {
          "target_platform_id": "{TARGET_PLATFORM}",
          "size": {
            "name": "M8"
          }
        }
      },
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "IGNORE_ALL",
            "vuln_type": ["OS"]
          }
        },
        {
          "action_id": "health-check",
          "params": {
            "endpoint": "lb-kibana-kibana-http"
          }
        },
        {
          "action_id": "resilience-tests",
          "params": {
            "test_cases": [
              "testKubernetesPodDelete",
              "testPodScaleUp",
              "testPodScaleDown"
            ]
          }
        },
        {
          "action_id": "cypress",
          "params": {
            "resources": {
              "path": "cypress"
            },
            "endpoint": "lb-kibana-kibana-http"
          }
        }
      ]
    }
  }
}
